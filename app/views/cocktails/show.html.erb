<h1> <%= @cocktail.name %> </h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> <%= dose.ingredient.name %> </li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
<%= link_to "Back to the list", cocktails_path, class: "btn btn-primary"%>

